{
  "authguard": {
    "jwt": {
      "algorithm": "HMAC256",
      "key": "FKvL11DI5rwgt51QgB3CVob3oWYrFNBzF0ROvu9Yaj8",
      "issuer": "Authguard",
      "strategies": {
        "accessToken": {
          "tokenLife": "20m",
          "refreshTokenLife": "1d",
          "useJti": true,
          "includePermissions": true,
          "includeRoles": true,
          "includeScopes": true
        },
        "idToken": {
          "tokenLife": "1d",
          "refreshTokenLife": "1d",
          "useJti": false,
          "includePermissions": false,
          "includeRoles": false,
          "includeScopes": false
        }
      },
      "allowedAlgorithms": ["HMAC256"],
      "trustedIssuers": ["self"]
    },
    "authentication": {
      "strategy": "idToken",
      "useOtp": true
    },
    "authorization": {
      "strategy": "accessToken"
    },

    "oneTimeAdmin": {
      "usernameVariable": "AUTHGUARD_OTA_USERNAME",
      "passwordVariable": "AUTHGUARD_OTA_PASSWORD"
    },

    "otp": {
      "lifeTime": "5m",
      "mode": "NUMERIC",
      "length": 6
    }
  }
}