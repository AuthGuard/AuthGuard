{
  "authguard": {
    "injection": {
      "packages": [
      "com.authguard"
    ]},

    "jwt": {
      "algorithm": "HMAC256",
      "key": "FKvL11DI5rwgt51QgB3CVob3oWYrFNBzF0ROvu9Yaj8",
      "issuer": "Authguard",
      "allowedAlgorithms": ["HMAC256"],
      "trustedIssuers": ["self"]
    },

    "exchange": {
      "allowed": [
        {
          "from": "basic",
          "to": "otp"
        },
        {
          "from": "basic",
          "to": "accessToken"
        },
        {
          "from": "refresh",
          "to": "accessToken"
        },
        {
          "from": "otp",
          "to": "accessToken"
        },
        {
          "from": "basic",
          "to": "session"
        },
        {
          "from": "otp",
          "to": "session"
        },
        {
          "from": "session",
          "to": "accountId"
        },
        {
          "from": "basic",
          "to": "passwordless"
        },
        {
          "from": "passwordless",
          "to": "accessToken"
        }
      ]
    },

    "accessToken": {
      "tokenLife": "20m",
      "refreshTokenLife": "1d",
      "useJti": true,
      "includePermissions": true,
      "includeRoles": true,
      "includeScopes": true
    },

    "idToken": {
      "tokenLife": "1d",
      "refreshTokenLife": "1d",
      "useJti": false,
      "includePermissions": false,
      "includeRoles": false,
      "includeScopes": false
    },

    "authentication": {
      "generateToken": "passwordless",
      "useOtp": true
    },

    "oneTimeAdmin": {
      "usernameVariable": "AUTHGUARD_OTA_USERNAME",
      "passwordVariable": "AUTHGUARD_OTA_PASSWORD"
    },

    "otp": {
      "lifeTime": "5m",
      "mode": "NUMERIC",
      "length": 6,
      "generateToken": "accessToken"
    },
    "passwordless": {
      "tokenLife": "1h",
      "randomSize": 128,
      "generateToken": "accessToken"
    },

    "account": {
      "verifyEmail": "true"
    },

    "verification": {
      "verifyEmailUrlTemplate": "http://gateway/authguard/verify/email?token=${token}",
      "emailVerificationLife": "1d"
    },

    "sessions": {
      "randomSize": 128,
      "lifeTime": "20m"
    }
  }
}